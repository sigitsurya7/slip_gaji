{
  "name": "kwala_sender-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.mjs",
  "author": "Zeeva",
  "description": "Kwala Sender App Adalah aplikasi untuk mengirim dan membuat slip gaji ke whatsapp",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npm run dev",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "npm run build && dotenv -e .env -- electron-builder --publish always",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.kwala_sender.app",
    "productName": "Kwala",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**",
      "main.mjs",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico",
      "license": "license.md"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "sigitsurya7",
        "repo": "slip_gaji"
      }
    ]
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "@fullcalendar/interaction": "^6.1.15",
    "@fullcalendar/list": "^6.1.15",
    "@fullcalendar/react": "^6.1.15",
    "@fullcalendar/timegrid": "^6.1.15",
    "@react-jvectormap/core": "^1.0.4",
    "@react-jvectormap/world": "^1.1.2",
    "apexcharts": "^4.1.0",
    "axios": "^1.8.4",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "electron-updater": "^6.6.2",
    "flatpickr": "^4.6.13",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^19.0.0",
    "react-apexcharts": "^1.7.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.5",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-router": "^7.1.5",
    "swiper": "^11.2.3",
    "tailwind-merge": "^3.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@tailwindcss/postcss": "^4.0.8",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv-cli": "^8.0.0",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "postcss": "^8.5.2",
    "tailwindcss": "^4.0.8",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-svgr": "^4.3.0"
  },
  "overrides": {
    "react-helmet-async": {
      "react": "^16.8.0 || ^17 || ^18 || ^19"
    },
    "@react-jvectormap/core": {
      "react": "^16.8.0 || ^17 || ^18 || ^19",
      "react-dom": "^16.8.0 || ^17 || ^18 || ^19"
    },
    "@react-jvectormap/world": {
      "react": "^16.8.0 || ^17 || ^18 || ^19",
      "react-dom": "^16.8.0 || ^17 || ^18 || ^19"
    }
  }
}
